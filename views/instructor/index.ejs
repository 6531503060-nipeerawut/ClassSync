            <!-- Main content -->
            <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Dashboard</h1>
                </div>

                <!-- Dashboard Cards -->
                <div class="row">
                    <div class="col-md-4">
                        <!-- Card Triggering the Modal -->
                        <a class="card text-decoration-none" style="color:black;" href="#" data-bs-toggle="modal" data-bs-target="#createCourseModal">
                            <div class="card-body">
                                <h5 class="card-title">Create Courses</h5>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a class="card  text-decoration-none"style="color:black;" href="#">

                            <div class="card-body">
                                <h5 class="card-title">Something</h5>
                            </div>
                    </a>
                    </div>
                    <div class="col-md-4">
                    <a class="card  text-decoration-none"style="color:black;" href="#">

                        <div class="card-body">
                            <h5 class="card-title">Something</h5>
                        </div>
                </a>
            </div>
                </div>

                <% if (message) { %>
                    <% if (errState) { %>
                        <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                            <%= message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } else { %>
                        <div class="alert alert-success alert-dismissible fade show my-3" role="alert">
                            <%= message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                <% } %>

                <!-- Course Table -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <h2>My Courses</h2>
                    <a href="/i/course"  class="btn btn-secondary">Refresh</a>
                </div>
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Course Code</th>
                                <th>Course Name</th>
                                <th>Students Credit</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (courses || courses.length > 0 ) { %>
                                <% courses.forEach((course, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td> 
                                        <td><%= course.course_code %></td>
                                        <td><%= course.course_name %></td>
                                        <td><%= course.course_credit %></td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Manage</button>
                                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal<%= course.course_id %>">
                                                Edit
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal<%= course.course_id %>">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <!-- DELETE Modal -->
                                    <div class="modal fade" id="deleteModal<%= course.course_id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= course.id %>" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel<%= course.id %>">Confirm Deletion</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete the course "<%= course.course_name %>"?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <!-- The actual delete action -->
                                                    <a href="/i/del/<%= course.course_id %>" class="btn btn-danger">Confirm Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Edit Modal -->
                                    <div class="modal fade" id="editModal<%= course.course_id %>" tabindex="-1" aria-labelledby="editModalLabel<%= course.course_id %>" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="editModalLabel<%= course.course_id %>">Edit Course</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <!-- Edit form to update the course details -->
                                                    <form action="/i/edit/<%= course.course_id %>" method="post">
                                                        <div class="mb-3">
                                                            <label for="courseCode<%= course.course_id %>" class="form-label">Course Code</label>
                                                            <input type="text" class="form-control" id="courseCode<%= course.course_id %>" name="course_code" value="<%= course.course_code %>" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="courseName<%= course.course_id %>" class="form-label">Course Name</label>
                                                            <input type="text" class="form-control" id="courseName<%= course.course_id %>" name="course_name" value="<%= course.course_name %>" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="courseCredit<%= course.course_id %>" class="form-label">Course Credit</label>
                                                            <select class="form-control" id="courseCredit<%= course.course_id %>" name="course_credit" required>
                                                                <option value="1" <%= course.course_credit === 1 ? 'selected' : '' %>>1</option>
                                                                <option value="2" <%= course.course_credit === 2 ? 'selected' : '' %>>2</option>
                                                                <option value="3" <%= course.course_credit === 3 ? 'selected' : '' %>>3</option>
                                                            </select>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <input type="submit" class="btn btn-primary" value="Save Changes">
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center">Data not found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    

    <!-- Modal Parts -->
    <div class="modal fade" id="createCourseModal" tabindex="-1" aria-labelledby="createCourseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createCourseModalLabel">Create New Course</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Modal content, such as a form to create a course -->
                    <form action="/i/course" method="post">
                        <div class="mb-3">
                            <label for="id" class="form-label">ID Reference</label>
                            <input type="text" class="form-control" name="id" value="<%= id %>" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="courseCode" class="form-label">Course Code</label>
                            <input name="courseCode" type="text" class="form-control" placeholder="Enter course name" require>
                        </div>
                        <div class="mb-3">
                            <label for="courseName" class="form-label">Course Name</label>
                            <input name="courseName" type="text" class="form-control" placeholder="Enter course name" require>
                        </div>
                        <div class="mb-3">
                            <label for="courseCredit" class="form-label">Course Credit</label>
                            <select class="form-control" name="courseCredit" require>
                                <option value="" disabled selected>Select course credit</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>
                        <div class="mb-3 text-end">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="Add course">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>