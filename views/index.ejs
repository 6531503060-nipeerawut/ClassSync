<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: url('public/images/Background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            position: relative;
            overflow: hidden;
        }

        /* Background Overlay */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 1;
        }
         /* Starry Sky */
         .stars {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
        }
        .star {
            position: absolute;
            background-color: white;
            border-radius: 50%;
            opacity: 0.9;
            animation: blink 2s infinite alternate;
            box-shadow: 0 0 8px 2px rgba(255, 255, 255, 0.7); /* Glowing effect */
        }

        /* Blinking Effect */
        @keyframes blink {
            0% {
                opacity: 0.3;
            }
            100% {
                opacity: 1;
            }
        }



        /* Content Styling */
        .container {
            position: relative;
            z-index: 2;
            padding-top: 5rem;
            text-align: center;
        }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        /* Cards Styling */
        .card {
            background: hsla(0, 0%, 42%, 0.378);
            border: 2px solid hsl(0, 0%, 100%);
            border-radius: 1rem;
            font-weight: bold;
            padding: 2rem;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card-body {
            text-align: center;
        }

        .btn-primary {
            background-color: #ffffff;
            border: none;
            border-radius: 1rem;
            color: #000;
            letter-spacing: 1px;
            width: 100%;
            padding: 1rem;
            transition: 0.3s;
        }

        .btn-primary:hover {
            background-color: #ffffff;
            color: #320455;
            letter-spacing: 2px;
        }

        /* Responsive Layout */
        .row {
            margin-bottom: 2rem;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="stars"></div>
    <!-- Content -->
    <div class="container">
        <h1>Welcome to ClassSync</h1>

        <div class="row mt-5 justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Student
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text">Please login first to access your account.</p>
                        <a href="/login" class="btn btn-primary btn-lg">Student Login</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Instructor
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text">Please login first to access your account.</p>
                        <a href="/login" class="btn btn-primary btn-lg">Instructor Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Create stars randomly in the background
        const starsContainer = document.querySelector('.stars');
        const numberOfStars = 200;  // Increase the number of stars

        for (let i = 0; i < numberOfStars; i++) {
            const star = document.createElement('div');
            star.classList.add('star');
            const size = Math.random() * 3 + 1; // Random size between 1px and 4px
            star.style.width = `${size}px`;
            star.style.height = `${size}px`;
            star.style.top = `${Math.random() * 100}vh`;  // Random vertical position
            star.style.left = `${Math.random() * 100}vw`;  // Random horizontal position
            star.style.animationDuration = `${Math.random() * 2 + 1}s`;  // Random animation duration for blinking
            star.style.animationDelay = `${Math.random() * 2}s`;  // Random delay for animation start

            starsContainer.appendChild(star);
        }
    </script>
</body>
</html>
